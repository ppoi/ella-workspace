{
  "name": "ella",
  "image": "ghcr.io/ppoi/devcontainer-images/type-charlie:20240614-01",
  "capAdd": ["AUDIT_WRITE", "NET_RAW"],
  "mounts": [
    {"source": "/run/podman/podman.sock", "target": "/var/run/docker.sock", "type": "bind"}
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "antfu.vite",
        "redhat.vscode-yaml",
        "vscjava.vscode-java-pack",
        "redhat.vscode-quarkus",
        "vscjava.vscode-maven"
      ],
      "settings": {
        "git.defaultCloneDirectory": "/workspaces"
      }
    }
  },
  "postCreateCommand": {
    "dood": "sudo chgrp docker /var/run/docker.sock"
  }
}